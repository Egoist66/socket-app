{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "checkJs": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["src/**/*", "middlewares"],
  "exclude": ["node_modules", "dist"]
}